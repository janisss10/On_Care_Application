<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MedicalRecord"
    android:background="@color/white">

    <TextView
        android:id="@+id/t1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:gravity="center"
        android:textColor="#000000"
        android:text="Add a Medical Record"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/t2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:text="A detailed medical history helps a doctor diagnose you better"
        android:gravity="center"
        android:textSize="17sp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/t1"/>

    <Button
        android:id="@+id/view_records"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/t2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:text="View Records"
        ></Button>

    <!-- Add the floating action button -->
   <Button
       android:id="@+id/take_photo"
       android:layout_width="150dp"
       android:layout_height="wrap_content"
       android:layout_below="@id/view_records"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="20dp"
       android:text="Upload Photo"
       ></Button>

    <Button
        android:id="@+id/write"
        android:layout_below="@id/take_photo"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Write"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        ></Button>


</RelativeLayout>
