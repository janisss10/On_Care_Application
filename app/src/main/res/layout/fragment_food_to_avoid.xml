<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FoodToEat">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/section_bmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="gone"></TextView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_bmi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/food_to_avoid_bmi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineBreakStyle="loose"
                    android:lineSpacingExtra="3dp"
                    android:padding="16dp"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="20sp" />


            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/section_diabetes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Section Diabetes"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="gone"></TextView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_diabetes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/food_to_avoid_diabetes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineBreakStyle="loose"
                    android:lineSpacingExtra="3dp"
                    android:padding="16dp"
                    android:textAlignment="textStart"

                    android:visibility="gone"
                    android:textColor="#000000"
                    android:textSize="20sp" />


            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/section_bp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                android:visibility="gone"></TextView>


            <androidx.cardview.widget.CardView
                android:id="@+id/card_bp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                app:cardBackgroundColor="#ffffff"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <TextView
                    android:id="@+id/food_to_avoid_bp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineBreakStyle="loose"
                    android:lineSpacingExtra="3dp"
                    android:padding="16dp"
                    android:textAlignment="textStart"
                    android:textColor="#000000"
                    android:visibility="gone"
                    android:textSize="20sp" />


            </androidx.cardview.widget.CardView>


            <ProgressBar
                android:id="@+id/progbar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"></ProgressBar>


        </LinearLayout>
    </ScrollView>

</FrameLayout>
